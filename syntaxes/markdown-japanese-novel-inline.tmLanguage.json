{
    "fileTypes": [],
    "scopeName": "markdown.japanese-novel.inline",
    "injectionSelector": "L:meta.paragraph.markdown - (comment, string, markup.fenced_code.block.markdown, markdown.japanese-novel.inline)",
    "patterns": [
        {
            "name": "markup.ruby.explicit.markdown.japanese-novel",
            "match": "([|｜])([^|｜《》\n\r]+)(《)([^《》\n\r]+)(》)",
            "comment": "ルビ",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "string"
                },
                "3": {
                    "name": "keyword"
                },
                "4": {
                    "name": "string"
                },
                "5": {
                    "name": "keyword"
                }
            }
        },
        {
            "name": "markup.ruby.implicit.markdown.japanese-novel",
            "match": "([\\p{Han}〆ヶ]+)(《)([^《》\n\r]+)(》)",
            "comment": "ルビ（漢字）",
            "captures": {
                "1": {
                    "name": "string"
                },
                "2": {
                    "name": "keyword"
                },
                "3": {
                    "name": "string"
                },
                "4": {
                    "name": "keyword"
                }
            }
        },
        {
            "name": "markup.emphasis.dots.markdown.japanese-novel",
            "match": "(?<=^|[^|｜])(《《)([^\n\r]+?)(》》)",
            "comment": "傍点",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "string"
                },
                "3": {
                    "name": "keyword"
                }
            }
        }
    ]
}
